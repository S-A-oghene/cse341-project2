{
  "swagger": "2.0",
  "info": {
    "title": "CSE 341 Project API",
    "version": "1.0.0",
    "description": "API for managing contacts, users, and books."
  },
  "host": "cse341-project2-s4wq.onrender.com",
  "schemes": ["https", "http"],
  "paths": {
    "/contacts": {
      "get": {
        "summary": "Get all contacts",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "summary": "Create a new contact",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/Contact" }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "summary": "Get a single contact by ID",
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "put": {
        "summary": "Update a contact",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          { "in": "body", "name": "body", "required": true, "schema": { "$ref": "#/definitions/Contact" } }
        ],
        "responses": {
          "204": { "description": "No Content" }
        }
      },
      "delete": {
        "summary": "Delete a contact",
        "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }],
        "responses": {
          "204": { "description": "No Content" }
        }
      }
    },
    "/users": {
      "get": { "summary": "Get all users", "responses": { "200": { "description": "OK" } } },
      "post": {
        "summary": "Create a new user",
        "parameters": [{ "in": "body", "name": "body", "required": true, "schema": { "$ref": "#/definitions/User" } }],
        "responses": { "201": { "description": "Created" } }
      }
    },
    "/users/{id}": {
      "get": { "summary": "Get a single user by ID", "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }], "responses": { "200": { "description": "OK" } } },
      "put": {
        "summary": "Update a user by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          { "in": "body", "name": "body", "required": true, "schema": { "$ref": "#/definitions/User" } }
        ],
        "responses": { "204": { "description": "No Content" } }
      },
      "delete": { "summary": "Delete a user by ID", "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }], "responses": { "204": { "description": "No Content" } } }
    },
    "/books": {
      "get": { "summary": "Get all books", "responses": { "200": { "description": "OK" } } },
      "post": {
        "summary": "Create a new book",
        "parameters": [{ "in": "body", "name": "body", "required": true, "schema": { "$ref": "#/definitions/Book" } }],
        "responses": { "201": { "description": "Created" } }
      }
    },
    "/books/{id}": {
      "get": { "summary": "Get a single book by ID", "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }], "responses": { "200": { "description": "OK" } } },
      "put": {
        "summary": "Update a book by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          { "in": "body", "name": "body", "required": true, "schema": { "$ref": "#/definitions/Book" } }
        ],
        "responses": { "204": { "description": "No Content" } }
      },
      "delete": { "summary": "Delete a book by ID", "parameters": [{ "name": "id", "in": "path", "required": true, "type": "string" }], "responses": { "204": { "description": "No Content" } } }
    }
  },
  "definitions": {
    "Contact": {
      "type": "object",
      "properties": {
        "firstName": { "type": "string", "example": "John" },
        "lastName": { "type": "string", "example": "Doe" },
        "email": { "type": "string", "example": "john.doe@example.com" },
        "favoriteColor": { "type": "string", "example": "Blue" },
        "birthday": { "type": "string", "format": "date", "example": "1990-01-15" }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "username": { "type": "string", "example": "johndoe90" },
        "email": { "type": "string", "example": "john.d@example.com" },
        "fullName": { "type": "string", "example": "Johnathan Doe" },
        "firstName": { "type": "string", "example": "Johnathan" },
        "lastName": { "type": "string", "example": "Doe" },
        "favoriteColor": { "type": "string", "example": "Green" },
        "birthday": { "type": "string", "format": "date", "example": "1990-01-15" }
      }
    },
    "Book": {
      "type": "object",
      "properties": {
        "title": { "type": "string", "example": "The Great Gatsby" },
        "author": { "type": "string", "example": "F. Scott Fitzgerald" },
        "publicationYear": { "type": "integer", "example": 1925 },
        "isbn": { "type": "string", "example": "978-0743273565" },
        "genre": { "type": "string", "example": "Fiction" },
        "pages": { "type": "integer", "example": 180 },
        "summary": { "type": "string", "example": "A story of the fabulously wealthy Jay Gatsby and his love for the beautiful Daisy Buchanan." },
        "language": { "type": "string", "example": "English" }
      }
    }
  }
}